/* page-modal */
.page-modal{
  position:fixed;
  bottom:0;
  width:100%;
  background-color:#fff;
  /* height:100%; */
  left:0;
}

.page-modal:before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 2rpx;
  border-top: 2rpx solid #D9D9D9;
  color: #D9D9D9;
  -webkit-transform-origin: 0 0;
          transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
          transform: scaleY(0.5);
}

.page-modal-header{
  display: flex;
  position: relative;
  padding:0 30rpx;
  justify-content: space-between;
  /* padding-top: 0; */
  /* background-color:#eee; */
}



